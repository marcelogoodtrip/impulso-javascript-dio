{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsc": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "ident": [
            "error",
            2
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-extra-parens": "error",
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "no-mult-spaces": "error"
    },
    "settings": {
        "react": {
            "version": "^18.2.0"
        }
    }
}